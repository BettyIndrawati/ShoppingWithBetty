@model ShoppingWithBetty.DataAccess.Repositories.ViewModels.CatagoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Catagories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Catagory"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Catagory Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
            
    </thead>
    <tbody>
        @foreach(var item in Model.catagories)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-actiom="CreateUpdate" asp-controller="catagory" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-actiom="Delete" asp-controller="catagory" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>