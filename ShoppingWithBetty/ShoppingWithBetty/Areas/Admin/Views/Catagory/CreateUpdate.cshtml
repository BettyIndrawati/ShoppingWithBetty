@model ShoppingWithBetty.DataAccess.Repositories.ViewModels.CatagoryVM
<form method="post" asp-action="CreateUpdate">
    <input type="hidden" asp-for="Catagory.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Catagory==null||Model.Catagory.Id==0)?"Create":"Update") Catagory</h2>
            <hr/>
        </div>
        <div asp-validation-summary=All></div>

        <div class="row mb-3">
            <label asp-for="Catagory.Name"></label>
            <input asp-for="Catagory.Name" class="form-control" />
            <span asp-validation-for="Catagory.Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="Catagory.DisplayOrder"></label>
            <input asp-for="Catagory.DisplayOrder" class="form-control" />
            <span asp-validation-for="Catagory.DisplayOrder" class="text-danger"></span>
        </div>
        @if(Model.Catagory==null || Model.Catagory.Id==0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
    </div>
    <a asp-action="Index" asp-controller="catagory">Back to List</a>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }